<%- include('../partials/header') %>

    <h1>A Cake for every Occasion</h1>
    
    <% if (user) {%>
    <table id="list">
      <thead>
        <tr>
          <th>Flavor</th>
          <th>Occasion</th>
          <th>Style</th>
        </tr>
      </thead>
      <tbody>
        <% cakes.forEach(function(c) { %>
          <tr>
            <td><%= c.flavor %></td>
            <td><%= c.occasion %></td>
            <td><%= c.style%></td>
            <td><a href="/cakes/<%= c._id %>">DETAILS</a></td>
           <td> <form method="POST" action="/cakes/<%= c._id %>?_method=DELETE">
              <button type="submit">Delete Order
              </button>
             </form></td>
          </tr>
          
          
          <% }); %>
        </tbody>
      </table>
      
      <% } %>
       
<%- include('../partials/footer') %>